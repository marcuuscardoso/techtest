{
  "name": "techtest-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "author": "Marcus Cardoso",
  "scripts": {
    "watch": "NODE_ENV=development cp .env.development .env && run-p watch:services watch:nodemon",
    "watch:services": "docker-compose up",
    "watch:wait-docker": "wait-on tcp:3306",
    "watch:nodemon": "yarn watch:wait-docker && nodemon ./src/shared/infra/http/server.ts",
    "create-module": "bash create-modules.sh",
    "lint": "eslint . --ext .ts --fix",
    "prebuild": "rm -rf dist",
    "build": "npx tsc -p tsconfig.json && tsc-alias",
    "start": "node dist/shared/infra/http/server.js",
    "sequelize": "NODE_ENV=development tsx ./node_modules/.bin/sequelize"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.10.1",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.5",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.12.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.10.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.17.0",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0"
  }
}
